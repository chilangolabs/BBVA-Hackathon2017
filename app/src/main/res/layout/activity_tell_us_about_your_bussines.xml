<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.chilangolabs.mdb.TellUsAboutYourBussines">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarAboutBussines"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_bbva_white" />

            <com.chilangolabs.mdb.customviews.MDBTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micro Dispersión"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:type="light" />

        </LinearLayout>

    </RelativeLayout>

    <com.chilangolabs.mdb.customviews.MDBTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:text="Cuentanos sobre tu negocio"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:type="semiBold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_form_white_border"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <com.chilangolabs.mdb.customviews.MDBTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nombre del Negocio" />

        <EditText
            style="@style/edtx_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.chilangolabs.mdb.customviews.MDBTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Giro Comercial" />

        <EditText
            style="@style/edtx_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.chilangolabs.mdb.customviews.MDBTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Número de empleados" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_border_corner_radius_edtx"
            android:orientation="vertical"
            android:paddingBottom="-5dp"
            android:paddingTop="-5dp">

            <org.angmarch.views.NiceSpinner
                android:id="@+id/spinnerAboutBussines"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAboutBussines"
            style="?attr/buttonBarStyle"
            android:layout_width="207dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_button_blue_gradient"
            android:gravity="center"
            android:text="Continuar"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
