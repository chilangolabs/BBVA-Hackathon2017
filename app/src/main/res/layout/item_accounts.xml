<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imgItemAccountCard"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:src="@drawable/ic_bancomer" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.chilangolabs.mdb.customviews.MDBTextView
                android:id="@+id/txtItemAccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sebastian Tellez Orozco"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                app:type="regular" />

            <com.chilangolabs.mdb.customviews.MDBTextView
                android:id="@+id/txtItemAccountCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjeta: •••• •••• •••• 7847"
                android:textColor="#64000000"
                android:textSize="12sp"
                app:type="semiBold" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>