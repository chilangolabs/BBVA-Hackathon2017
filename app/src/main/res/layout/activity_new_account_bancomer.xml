<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chilangolabs.mdb.NewAccountBancomerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarNewCard"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_bbva_white" />

            <com.chilangolabs.mdb.customviews.MDBTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micro DispersiÃ³n"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:type="light" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <com.chilangolabs.mdb.customviews.MDBTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Cuenta Bancomer"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:type="semiBold" />

        <com.chilangolabs.mdb.customviews.MDBTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Para crear una cuenta, es necesario que el futuro tarjeta habiente nos brinde un par de datos personales, de lo contrario no podremos crear la cuenta"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:type="light" />

        <Button
            android:id="@+id/btnNewAccountNex"
            android:layout_width="207dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button_corner_white"
            android:gravity="center"
            android:text="Continuar"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</LinearLayout>
